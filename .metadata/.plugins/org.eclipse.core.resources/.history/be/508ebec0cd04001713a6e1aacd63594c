package tp1.ex3.crypte.impl;

import tp1.ex3.crypte.CrypteComponent;
import tp1.ex3.server.interfaces.Encapsule;

public class CryptImpl extends CrypteComponent {

	@Override
	protected Encapsule make_service() {
		return new Encapsule() {
			
			@Override
			public void encapsule(String source) {
				String message = new StringBuilder(source).reverse().toString();
				requires().helper().decrypt(message);
			}
		};
	}

}
