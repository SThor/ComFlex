package tp1.ex3;

import tp1.ex1_ex2.composite.CompositeComponent;
import tp1.ex1_ex2.composite.impl.CompositeImpl;
import tp1.ex1_ex2.server.impl.ComposantSimpleImpl;
import tp1.ex1_ex2.server.ComposantSimpleType;


public class Run {
	public static void main(String[] args){
		System.out.println("\n============ Premier exercice : composant simple ============");
		ComposantSimpleType.Component myComp = 
				(new ComposantSimpleImpl()).newComponent();
		String source = "une chose";
		System.out.println("J'envoie "+source+", je récupère "+myComp.service().appendSmth(source)+".");
		
		System.out.println("\n========== Deuxième exercice : composant composite ==========");
		CompositeComponent.Component composite = new CompositeImpl().newComponent();

		System.out.println("J'envoie "+source+", je récupère "+composite.service().prepend(source)+".");
		
	}
}
